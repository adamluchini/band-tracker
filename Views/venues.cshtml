<h1>Band tracker</h1>
<hr />
<h2>Venues:</h2>
@if (Model.Count != 0)
{
  <ul>
    @foreach (var venue in Model)
    {
      <li>
        <form action="/venues/delete/@venue.GetId()" method="post">
          <a href="/venues/@venue.GetId()">@venue.GetName()</a>
           <a href = "/venues/edit/@venue.GetId()"><button type="button">Edit</button></a>
           <input type="hidden" name="_method" value="DELETE">
          <button type="submit">Delete</button>
        </form>
      </li>
    }
  </ul>
}
else
{
  <p>no venues yet</p>
}
<h4><a href="/venues/new">Add a new venue</a></h4>
<h4><a href="/">Return home</a></h4>
