<h1>Band Tracker</h1>
<hr />
<h2>Bands:</h2>
@if (Model.Count != 0)
{
  <ul>
    @foreach (var band in Model)
    {
      <li>
        <form action="/bands/delete/@band.GetId()" method="post">
          <a href='/bands/@band.GetId()'>@band.GetName()</a>
          <a href = "/bands/edit/@band.GetId()"><button type="button">Edit</button></a>
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit">Delete</button>
        </form>
      </li>
    }
  </ul>
}
else
{
  <p>No bands are currently active</p>
}
<h4><a href="/bands/new">Add new band</a></h4>
<h4><a href="/">Return home</a></h4>
